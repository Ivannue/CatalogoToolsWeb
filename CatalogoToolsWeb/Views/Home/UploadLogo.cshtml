@model CatalogoToolsWeb.Models.Proveedor

@{
    ViewData["Title"] = "Subir logo";
}

<h1>Subir logo: @Model.Nombre</h1>

<div class="mb-3">
    @if (Model.Logo != null && Model.Logo.Length > 0)
    {
        var base64 = Convert.ToBase64String(Model.Logo);
        <img src="data:image/png;base64,@base64" alt="Logo actual" style="max-height:120px;" class="mb-3" />
    }
    else
    {
        <p class="text-muted">Sin logo actualmente.</p>
    }
</div>

<form asp-action="UploadLogo" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="mb-3">
        <label for="logoFile" class="form-label">Selecciona imagen (máx 2 MB)</label>
        <input class="form-control" type="file" id="logoFile" name="logoFile" accept="image/*" />
        @if (ViewData.ModelState["logoFile"]?.Errors.Count > 0)
        {
            <div class="text-danger">@ViewData.ModelState["logoFile"].Errors[0].ErrorMessage</div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Subir</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>